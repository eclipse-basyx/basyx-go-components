{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AAS Discovery Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/discoveryservice/main.go",
            "args": [
                "-config",
                "${workspaceFolder}/cmd/discoveryservice/config.yaml"
            ]
        },
        {
            "name": "Launch Submodel Repository Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/submodelrepositoryservice/main.go",
            "args": [
                "-config",
                "${workspaceFolder}/cmd/submodelrepositoryservice/config.yaml",
                "-databaseSchema",
                "${workspaceFolder}/basyxschema.sql"
            ]
        },
        {
            "name": "Launch AAS Registry Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/aasregistryservice/main.go",
            "args": [
                "-config",
                "${workspaceFolder}/cmd/aasregistryservice/config.yaml"
            ]
        }
    ]
}