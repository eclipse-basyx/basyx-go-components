{
  "AllAccessPermissionRules": {
    "DEFATTRIBUTES": [
      { "name": "role_attr", "attributes": [ { "CLAIM": "role" } ] }
    ],
    "DEFOBJECTS": [
      { "name": "all_shell_descriptors", "objects": [ { "DESCRIPTOR": "$aasdesc(\"*\")" } ] }
    ],
    "DEFACLS": [
      { "name": "user", "acl": { "USEATTRIBUTES": "role_attr", "RIGHTS": [ "READ" ], "ACCESS": "ALLOW" } }
    ],
    "DEFFORMULAS": [
      {
        "name": "match_multi_nested",
        "formula": {
          "$match": [
            {
              "$eq": [
                { "$field": "$aasdesc#specificAssetIds[].externalSubjectId.keys[].value" },
                { "$attribute": { "CLAIM": "role" } }
              ]
            },
            {
              "$match": [
                {
                  "$eq": [
                    { "$field": "$aasdesc#idShort" },
                    { "$numVal": 42 }
                  ]
                }
              ]
            },
            {
              "$eq": [
                { "$field": "$aasdesc#assetKind" },
                { "$boolean": true }
              ]
            }
          ]
        }
      }
    ],
    "rules": [
      { "USEACL": "user", "USEOBJECTS": [ "all_shell_descriptors" ], "USEFORMULA": "match_multi_nested" }
    ]
  }
}
