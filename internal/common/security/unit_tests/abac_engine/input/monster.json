{
  "AllAccessPermissionRules": {
    "rules": [
      {
        "ACL": {
          "ACCESS": "ALLOW",
          "RIGHTS": ["READ","UPDATE"],
          "ATTRIBUTES": [{"CLAIM": "role"}]
        },
        "OBJECTS": [{"DESCRIPTOR" : "$aasdesc(\"https://hamburg.de\")"},{"DESCRIPTOR" : "$aasdesc(\"https://bremen.de\")"}],
        "FORMULA": { 
          "$and": [
            { 
              "$eq": [ 
                { 
                  "$attribute": { "CLAIM": "role" } 
                }, 
                { 
                  "$strVal": "admin" 
                } 
              ] 
            },
            {
              "$eq": [
                {
                  "$field": "$aasdesc#specificAssetIds[].externalSubjectId.keys[3].value"
                },
                {
                  "$strVal": "somevalue"
                }
              ]
            },
            {
              "$eq": [
                {
                  "$field": "$aasdesc#endpoints[].protocolinformation.href"
                },
                {
                  "$strVal": "https://test.de"
                }
              ]
            },
            {
              "$eq": [
                {
                  "$field": "$aasdesc#submodelDescriptors[0].semanticId.type"
                },
                {
                  "$strVal": "Type"
                }
              ]
            },
            {
              "$eq": [
                {
                  "$field": "$aasdesc#submodelDescriptors[0].endpoints[].interface"
                },
                {
                  "$strVal": "AC 3.0"
                }
              ]
            }
          ]
        },
        "FILTER": {
          "FRAGMENT": "$aasdesc#assetInformation.specificAssetIds[]",
          "CONDITION": 
           {
            "$eq": [
              {
                "$field": "$aasdesc#specificAssetIds[].name"
              },
              {
                "$strVal": "manufacturerPartId"
              }
            ]
          }
        }
      }
    ]
  }
}