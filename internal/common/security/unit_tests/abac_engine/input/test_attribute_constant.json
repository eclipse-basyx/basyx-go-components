{
  "AllAccessPermissionRules": {
    "rules": [
      {
        "ACL": {
          "ACCESS": "ALLOW",
          "RIGHTS": ["READ","UPDATE"],
          "ATTRIBUTES": [{"GLOBAL": "ANONYMOUS"}]
        },
        "OBJECTS": [{"DESCRIPTOR" : "$aasdesc(\"https://martin.de\")"}],
        "FORMULA": { 
          "$and": [
            { 
              "$eq": [ 
                { 
                  "$attribute": { "CLAIM": "role" } 
                }, 
                { 
                  "$field": "$aasdesc#specificAssetIds[].name"
                } 
              ] 
            },
            {
              "$boolean": true
            }
          ]
        }
      }
    ]
  }
}