{
  "AllAccessPermissionRules": {
    "rules": [
      {
        "ACL": {
          "ACCESS": "ALLOW",
          "RIGHTS": ["READ","UPDATE"]
        },
        "OBJECTS": [{"ROUTE": "/shell-descriptors"}, {"DESCRIPTOR" : "$aasdesc(\"https://martin.de\")"}],
        "FORMULA": { 
          "$and": [
            { 
              "$and": [
                {
                  "$eq": [
                    {
                      "$field": "$aasdesc#specificAssetIds[].name"
                    },
                    {
                      "$strVal": "manufacturerPartId"
                    }
                  ]
                },
                {
                  "$boolean": true
                }
              ]
            },
            { 
              "$eq": [ 
                { 
                  "$attribute": { "CLAIM": "role" } 
                }, 
                { 
                  "$strVal": "admin" 
                } 
              ] 
            }
          ]
        }
      }
    ]
  }
}
