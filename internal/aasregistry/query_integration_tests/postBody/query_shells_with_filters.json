{
  "$condition": {
    "$or": [
      {
        "$eq": [
          { "$field": "$aasdesc#specificAssetIds[].externalSubjectId.keys[].value" },
          { "$strVal": "WRITTEN_BY_X" }
        ]
      },
      {
        "$eq": [
          { "$field": "$aasdesc#specificAssetIds[].externalSubjectId.keys[].value" },
          { "$strVal": "WRITTEN_BY_Y" }
        ]
      }
    ]
  },
  "$filters": [
    {
      "$fragment": "$aasdesc#specificAssetIds[]",
      "$condition": {
        "$eq": [
          { "$field": "$aasdesc#specificAssetIds[].name" },
          { "$strVal": "customerPartId" }
        ]
      }
    },
    {
      "$fragment": "$aasdesc#specificAssetIds[].externalSubjectId",
      "$condition": {
        "$eq": [
          { "$field": "$aasdesc#specificAssetIds[].name" },
          { "$strVal": "customerPartId" }
        ]
      }
    }
  ]
}
