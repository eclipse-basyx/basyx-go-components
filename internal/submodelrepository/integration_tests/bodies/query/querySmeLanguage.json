        "$and": [
            {
                "$eq": [
                    {
                        "$field": "$sme#language"
                    },
                    {
                        "$strVal": "fr"
                    }
                ]
            },
            {
                "$contains": [
                    {
                        "$field": "$sm#idShort"
                    },
                    {
                        "$strVal": "Query_Language"
                    }
                ]
            }
        ]
    }
}
